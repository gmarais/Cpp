NAME = replace
CC = g++
CFLAGS = -c -Wall -Wextra -Werror
SRC = main.cpp
OBJ = $(SRC:.cpp=.o)
all: $(NAME)
	@echo -e "\n\n\033[1;31m-\033[1;32m-\033[1;33m-\033[1;34m-\033[1;35m-\033[1;36m-\033[1;31m-\033[1;32m-\033[1;33m-\033[1;34m-\033[1;35m-\033[1;36m-\033[1;31m-\033[1;32m-\033[1;33m-\033[1;34m-\033[1;35m-\033[1;36m-\033[1;31m-\033[1;32m-\033[1;33m-\033[1;34m-\033[1;35m-\033[1;36m-\033[1;31m[EXECUTABLE COMPILED]\033[1;36m-\033[1;35m-\033[1;34m-\033[1;33m-\033[1;32m-\033[1;31m-\033[1;36m-\033[1;35m-\033[1;34m-\033[1;33m-\033[1;32m-\033[1;31m-\033[1;36m-\033[1;35m-\033[1;34m-\033[1;33m-\033[1;32m-\033[1;31m-\033[1;36m-\033[1;35m-\033[1;34m-\033[1;33m-\033[1;32m-\033[1;31m-\n\n\033[0;0m"
$(NAME): $(OBJ)
	@$(CC) $(OBJ) -o $@
clean:
	@rm -rf $(OBJ)
fclean: clean
	@rm -rf $(NAME)
re: fclean all
